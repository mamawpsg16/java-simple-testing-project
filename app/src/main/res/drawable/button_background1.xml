<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#68b1d8"/>  <!-- Darker blue when pressed -->
            <corners android:radius="8dp"/>  <!-- Ensure uniform radius -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6200EE"/>  <!-- Default blue -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
