<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HintTextStyle">
        <item name="android:textSize">12sp</item> <!-- Adjust size here -->
    </style>

    <style name="Theme.MyApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize primary and secondary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
    </style>

    <style name="toastTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>